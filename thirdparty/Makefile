DIRECTORY = $(shell find . -maxdepth 1 -type d -not -path .)

all:
	# update code
	cd ..;./thirdparty/update.py
	# compile code
	for P in $(DIRECTORY); do \
		if [ -a "$$P/Makefile" ]; then make -C $$P; fi; \
	done

clean:
	for P in $(DIRECTORY); do \
		if [ -a "$$P/Makefile" ]; then make -C $$P clean; fi; \
	done
